# Directory to cache the Chronos T5 model (relative to project root)
MODEL_CACHE_DIR=./data/model_cache/

# Chronos model variant to use (amazon/chronos-t5-small, amazon/chronos-t5-base, amazon/chronos-t5-large)
MODEL_NAME=amazon/chronos-t5-small

# Device for model inference (auto, cpu, cuda)
MODEL_DEVICE=auto

# Maximum context length for time series input (Chronos T5 Small supports up to 512)
MAX_CONTEXT_LENGTH=512

# Minimum number of historical data points required for prediction
MIN_HISTORY_POINTS=12

# Hugging Face symlinks
HF_HUB_DISABLE_SYMLINKS_WARNING=1

# Enable GPU acceleration if available (true/false)
ENABLE_GPU=true




